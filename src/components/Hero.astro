---
import Button from '@components/ui/Button.astro';
import { t } from 'i18next';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center md:flex-row"
>
	<!-- LEFT COLUMN -->
	<div class="mb-10 flex flex-col items-center md:mb-0 md:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-navy dark:text-white md:text-5xl">
				Hi! My name is <span class="text-orange">John Doe</span> and I am a web developer based in New
				York.
			</h1>
		</div>
		<div class="mb-10">
			<Button style={'primary'} size={'md'} class={'flex'}>{t('hero.learnMore')}</Button>
		</div>
	</div>
	<!-- RIGHT COLUMN -->
	<div class="mb-10 flex w-1/2 items-center justify-center">
		<img alt="hero image" src="/hero.png" height="500px" width="450px" />
	</div>
</section>
