---
import Button from '@components/ui/Button.astro';
---

<div
	class="mb-10 flex h-screen flex-col items-center justify-center p-10 text-center md:mb-0 md:h-screen md:p-0"
>
	<div class="mb-5 flex">
		<h1 class="font-monospace text-3xl text-terracotta md:text-5xl">
			Hi! My name is John Doe and I am a web developer based in New York.
		</h1>
	</div>
	<div class="flex flex-col items-center md:flex-row">
		<Button style={'primary'} size={'md'} class={'flex'}>Learn more</Button>
		<Button style={'primary'} size={'md'} class={'flex'}>
			Download my CV <svg
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
				class="ml-1 h-6 w-6"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3"
				></path>
			</svg>
		</Button>
	</div>
</div>
