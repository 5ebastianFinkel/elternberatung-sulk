---
interface Props {
	size?: 'sm' | 'md' | 'lg';
	style?: 'outline' | 'primary';
	class?: string;
}

const { size = 'md', style = 'primary', class: className, ...rest } = Astro.props;

const sizes = {
	sm: 'px-1 py-1',
	md: 'px-5 py-2.5',
	lg: 'px-6 py-3',
};

const styles = {
	outline:
		'p-2 border-2 text-orange dark:border-white hover:text-navy hover:border:navy dark:text-white dark:hover:border-orange dark:hover:text-orange shadow-lg',
	primary:
		'p-2 border-2 border-white text-white bg-orange hover:bg-white hover:text-orange dark:hover:bg-white dark:hover:text-orange dark:hover:border-2 dark:hover:border-orange hover:text-orange hover:border-orange shadow-lg transition duration-500 hover:scale-100 ',
};
---

<button {...rest} class:list={['rounded text-center', sizes[size], styles[style], className]}
	><slot />
</button>
