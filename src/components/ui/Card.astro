---
import Tags from '@components/ui/Tags.astro';
interface Props {
	url?: string;
	img?: string;
	alt?: string;
	title?: string;
	tags: string[];
	children?: HTMLElement | HTMLElement[];
}

const {
	url = '#',
	img = '',
	alt = 'Project image',
	title = 'Project title',
	tags = ['Tags'],
} = Astro.props;
---

<section class="p-4 md:w-1/2 lg:w-1/3">
	<article
		class="rounded-xl bg-white p-3 shadow-lg duration-300 hover:scale-105 hover:transform hover:shadow-xl"
	>
		<a href={url}>
			<div class="relative flex items-end overflow-hidden rounded-xl">
				<img
					src="https://images.unsplash.com/photo-1549298916-b41d501d3772?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1112&q=80"
					alt={alt}
				/>
			</div>
			<div class="mt-1 p-2">
				<h2 class="text-navy">{title}</h2>
				<Tags tags={tags} />
			</div>
		</a>
	</article>
</section>
