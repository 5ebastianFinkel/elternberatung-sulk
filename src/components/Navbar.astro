---
import { Astronav, MenuIcon, MenuItems } from 'astro-navbar';

const menuitems = [
	{
		title: 'About',
		path: '#about',
	},
	{
		title: 'Skillls',
		path: '#skills',
	},
	{
		title: 'Projects',
		path: '#projects',
	},
	{
		title: 'Contact',
		path: '#contact',
	},
];
---

<header class="flex flex-col justify-center p-4 md:flex-row">
	<Astronav>
		<div class="flex md:hidden">
			<MenuIcon class="h-6 w-6 text-navy dark:text-white" />
		</div>

		<MenuItems class="mt-2 hidden md:flex md:w-auto">
			<ul class="flex flex-col text-navy dark:text-white md:flex-row md:gap-3">
				{
					menuitems.map((item) => (
						<>
							{item && (
								<li>
									<a href={item.path} class="py-2md flex hover:text-terracotta md:px-3">
										{item.title}
									</a>
								</li>
							)}
						</>
					))
				}
			</ul>
			<button id="themeSwitcher">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					class="h-6 w-6 text-navy hover:text-terracotta dark:text-white dark:hover:text-terracotta"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
					></path>
				</svg>
			</button>
		</MenuItems>
	</Astronav>
</header>
